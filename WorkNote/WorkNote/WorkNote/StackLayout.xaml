<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkNote.StackLayout">
    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical">
        <StackLayout BackgroundColor="Yellow" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Button Text="Push Me!" BackgroundColor="Red"  VerticalOptions="CenterAndExpand" HorizontalOptions="Start"/>
            <Entry Placeholder="Write Me !" BackgroundColor="White"  VerticalOptions="CenterAndExpand"  HorizontalOptions="Center"/>
            <Switch BackgroundColor="Pink" VerticalOptions="CenterAndExpand"  HorizontalOptions="End"/>
        </StackLayout>
        <StackLayout BackgroundColor="Red" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Label Text="Hello Word!" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
        </StackLayout>
        <StackLayout BackgroundColor="White" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            
        </StackLayout>
    </StackLayout>
</ContentPage>