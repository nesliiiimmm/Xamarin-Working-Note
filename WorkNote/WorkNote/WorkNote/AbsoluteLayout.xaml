<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkNote.AbsoluteLayout" Padding="0,20">
    <AbsoluteLayout>
        <BoxView BackgroundColor="LightSkyBlue" AbsoluteLayout.LayoutBounds="0,0,100,100" AbsoluteLayout.LayoutFlags="All" />
        <BoxView BackgroundColor="White" AbsoluteLayout.LayoutBounds="0.5,0.1,200,200" AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Image x:Name="image" Source="minion.jpg" AbsoluteLayout.LayoutBounds="0.5,0.1,200,200" AbsoluteLayout.LayoutFlags="PositionProportional" IsVisible="False"/>
        <Button  BackgroundColor="DarkGray" Text="Show Image"  AbsoluteLayout.LayoutBounds="0,1,1,50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" Clicked="Button_Clicked"/>

    </AbsoluteLayout>
</ContentPage>